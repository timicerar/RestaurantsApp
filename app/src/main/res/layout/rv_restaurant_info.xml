<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/restaurantInfoImage"
            android:layout_width="@dimen/activity_horizontal_margin_32"
            android:layout_height="@dimen/activity_vertical_margin_32"
            android:contentDescription="@string/restaurant_location"
            android:src="@drawable/ic_location_24dp"
            android:layout_below="@id/restaurantHorizontalLineOne"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/activity_vertical_margin_16"
            android:layout_marginStart="@dimen/activity_horizontal_margin_16"
            android:layout_marginBottom="@dimen/activity_vertical_margin_16"/>

    <TextView
            android:id="@+id/restaurantInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/restaurantInfoImage"
            android:text="@string/restaurant_location"
            android:textSize="18sp"
            android:ellipsize="end"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/montserrat_light"
            android:layout_marginTop="@dimen/activity_vertical_margin_16"
            android:layout_marginStart="@dimen/activity_horizontal_margin_16"
            android:layout_marginEnd="@dimen/activity_horizontal_margin_16"
            android:layout_marginBottom="@dimen/activity_vertical_margin_16"/>

    <View
            android:id="@+id/restaurantHorizontalLineTwo"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/restaurantInfoText"
            android:layout_marginStart="@dimen/activity_horizontal_margin_16"
            android:layout_marginEnd="@dimen/activity_horizontal_margin_16"
            android:background="@color/colorLightGray"/>

</RelativeLayout>