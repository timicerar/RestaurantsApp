<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/navigation_header_container"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:background="@drawable/nav_header_bg"
                android:paddingTop="@dimen/activity_vertical_margin_16"
                android:paddingBottom="@dimen/activity_vertical_margin_16"
                android:paddingStart="@dimen/activity_horizontal_margin_16"
                android:paddingEnd="@dimen/activity_horizontal_margin_16"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/nav_user_profile_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_app"
            app:civ_border_width="1dp"
            android:layout_above="@+id/nav_ime_in_priimek"
            android:layout_marginBottom="@dimen/activity_vertical_margin_16"/>

    <TextView
            android:id="@+id/nav_ime_in_priimek"
            android:text="@string/nav_ime_in_priimek"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_regular"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/nav_email"
            android:layout_marginBottom="8dp"/>

    <TextView
            android:id="@+id/nav_email"
            android:text="@string/nav_email"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_regular"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>

</RelativeLayout>